---
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section
  id="menu"
  class="bg-[#efe5d8] py-20 scroll-offset text-gray-800 flex flex-col lg:flex-row items-start lg:items-center justify-center lg:justify-end gap-5 lag:gap-0 text-start relative"
>
  <img
    src="/images/menu7.webp"
    class="w-full h-[120vw] object-cover lg:hidden"
  />
  <div class="flex flex-col lg:w-[40vw] xl:w-[30vw] gap-10">
    <h2 class="text-2xl mx-5 lg:mx-0 lg:ml-10 font-bold z-5 md:text-3xl">
      {t("menu.title")}
    </h2>
    <p class="z-5 text-lg mx-5 lg:mx-0 lg:px-0 lg:ml-10 lg:mr-30 md:text-xl">
      {t("menu.desc")}
    </p>
    <a
      href="/menu"
      class="z-5 border w-1/3 border-gray-800 font-bold text-sm py-2 px-5 mx-5 lg:mx-0 lg:ml-10 hover:bg-yellow-600 hover:border-yellow-600 hover:text-white"
      >{t("menu.button")}</a
    >
  </div>
  <img
    src="/images/menu7.webp"
    class="w-1/2 h-[40vw] object-cover hidden lg:block"
  />
</section>

---
import { getLangFromUrl, useTranslations } from "../i18n/utils";
import Carousel from "../components/Carousel.astro";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section
  class="px-[5vw] py-[20vw] flex flex-col items-center lg:flex-row relative gap-[10vw] text-white 2xl:justify-end"
>
  <div
    class="flex mt-[10vw] lg:mt-0 flex-col gap-[10vw] lg:gap-[5vw] text-lg items-center lg:items-start justify-center lg:w-1/2 2xl:w-1/3"
  >
    <p>{t("menu.desc")}</p>
    <a
      href="/menu"
      class="font-bold bg-white hidden lg:block hover:bg-yellow-600 text-black hover:text-white w-max py-2 px-4 rounded-lg"
      >{t("menu.button")}</a
    >
  </div>
  <Carousel />
  <a
      href="/menu"
      class="font-bold bg-white lg:hidden hover:bg-yellow-600 text-black hover:text-white w-max py-2 px-4 rounded-lg"
      >{t("menu.button")}</a
    >
  <video
    class="absolute inset-0 w-full h-full object-cover -z-10 sepia"
    autoplay
    muted
    loop
    playsinline
  >
    <source src="/videos/background2.mp4" type="video/mp4" />
    Your browser does not support the video tag.
  </video>
</section>

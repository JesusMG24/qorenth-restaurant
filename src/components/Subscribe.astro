---
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section class="bg-gray-300 flex justify-between items-center p-5">
  <h3 class="text-gray-800 w-4/7 text-lg leading-tight">
    {t("subscribe.title")}
  </h3>
  <a class="bg-black text-white py-2 px-5 hover:bg-yellow-600 hover:text-black"
    >{t("subscribe.button")}</a
  >
</section>

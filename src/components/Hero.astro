---
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<div
  id="inicio"
  class="relative w-full h-[80vh] overflow-hidden opacity-0 translate-y-4 transition-all duration-700 will-change-transform fade-in-section"
>
  <!-- Overlay for better text contrast -->
  <div class="absolute inset-0 bg-black/40 z-20 pointer-events-none"></div>

  <div
    class="flex-col gap-5 uppercase font-semibold text-3xl md:text-7xl z-30 absolute text-white flex w-full h-full items-center justify-center text-center drop-shadow-lg"
  >
    <h1 class="px-30 md:px-50 lg:px-90 md:text-5xl lg:text-4xl 2xl:text-3xl">
      {t("hero.title")}
    </h1>
    <a
      href="https://www.opentable.com/"
      target="_blank"
      referrerpolicy="no-referrer"
      class="text-white border border-white text-sm py-2 px-4 hover:bg-yellow-600 hover:border-yellow-600 hover:text-white"
      >{t("hero.button")}</a
    >
  </div>

  <!-- Video Background -->
  <video
    class="absolute inset-0 w-full h-full object-cover z-10"
    autoplay
    muted
    loop
    playsinline
  >
    <source src="/videos/background.mp4" type="video/mp4" />
    Your browser does not support the video tag.
  </video>
</div>

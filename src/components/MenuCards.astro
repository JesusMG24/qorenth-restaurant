---
import { menu } from "../data/menu";
import type { Food } from "../data/menu";
---

<section class="text-white uppercase pb-10">
  <div class="pt-[10vh]"></div>
  <ul
    class="flex flex-col lg:flex-row lg:flex-wrap gap-10 md:gap-0 lg:gap-10 md:p-15 lg:justify-around"
  >
    {
      menu.map((food: Food) => (
        <li class="flex flex-col lg:w-100 items-center gap-5 opacity-0 translate-y-4 transition-all duration-700 will-change-transform fade-in-section md:py-10 md:border-b md:border-white/20 lg:border-none">
          <div class="relative w-full h-70 md:h-120 lg:h-90 overflow-hidden">
            <img
              src={food.image}
              loading="lazy"
              class="absolute inset-0 w-full h-full object-cover"
            />
            <p class="rotate-270 font-semibold absolute origin-top-left text-black left-0 top-90 md:top-130 w-100 md:w-130 text-center py-2 px-4 shadow-2xl bg-linear-to-r from-white to-white/20">
              {food.category}
            </p>
          </div>
          <div class="px-10">
            <h3 class="font-semibold md:text-lg">{food.name}</h3>
            <p class="w-2/3 lg:w-3/4 font-light text-xs md:text-base">
              {food.description}
            </p>
            <div class="w-full flex justify-end">
              <p class="bg-white text-black w-max py-1 px-2">{food.price}</p>
            </div>
          </div>
        </li>
      ))
    }
  </ul>
</section>
